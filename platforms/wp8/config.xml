<?xml version='1.0' encoding='utf-8'?>
<widget id="net.pandajs.launcher" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Insomnia">
        <param name="wp-package" value="Insomnia" />
    </feature>
    <feature name="Device">
        <param name="wp-package" value="Device" />
    </feature>
    <icon height="99" src="res/icon/wp8/ApplicationIcon.png" width="99" />
    <icon height="159" src="res/icon/wp8/Background.png" width="159" />
    <splash height="1280" src="res/screen/wp8/SplashScreenImage.jpg" width="768" />
    <name>Panda Launcher</name>
    <description>
        Mobile app to connect your devices into Panda Editor
    </description>
    <author email="eemeli.kelokorpi@gmail.com" href="http://www.pandajs.net">
        Eemeli Kelokorpi
    </author>
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-installLocation" value="auto" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="WebViewBounce" value="false" />
    <access origin="*" />
    <content src="index.html" />
    <icon src="res/icon/icon.png" />
</widget>
